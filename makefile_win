#Machine specifics.
DIR_HOME=c:/devel/repos/
DIR_OBJ=objects

MINGWPATH=c:/devel/deps/mingw-w64/mingw32/
DIR_SDL2=c:/devel/deps/sdl2-plus-libs/include/
SYSTEM_FLAGS=-DWINCOMPIL=1 -D__NO_INLINE__

#Dependencies
DIR_LIBDANSDL_2=$(DIR_HOME)libdansdl2
DIR_TOOLS=$(DIR_HOME)tools
DIR_LOG=$(DIR_HOME)log

#Commands.
CLEAN=if exist "$(DIR_OBJ)" rmdir $(DIR_OBJ) /S /Q && if exist libdansdl2-tools.a del libdansdl2-tools.a
CREATE_OBJ_DIR=	if not exist "$(DIR_OBJ)" mkdir $(DIR_OBJ)

#Build specifics.
OPTIMIZATION=-O2
#DEBUG=-g

#Fixed compiler definitions.
CC=g++
WARNING_FLAGS=-Wno-deprecated -Wall
FLAGS_BASE= -fno-rtti -ansi -pedantic -std=c++11 $(SYSTEM_FLAGS)
INCLUDES=-I $(MINGW32_INCLUDE) -I $(MINGW32_LIB) -I $(DIR_LIBDANSDL_2) -I $(DIR_TOOLS) -I $(DIR_LOG) -I $(DIR_SDL2)

include make/makefile_common
